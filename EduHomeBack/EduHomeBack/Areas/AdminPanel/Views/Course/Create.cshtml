@model CourseViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create new course</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.Photo">Choose image</label>
                            <input asp-for="@Model.Course.Photo" class="form-control" accept="image/*" type="file">
                            <span asp-validation-for="@Model.Course.Photo" class="text-danger"></span>
                        </div>
                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.Name">Name</label>
                            <input class="form-control" asp-for="@Model.Course.Name" placeholder="Name">
                            <span asp-validation-for="@Model.Course.Name" class="text-danger"></span>
                        </div>

                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.AboutCourse">About Course</label>
                            <textarea asp-for="@Model.Course.AboutCourse" class="form-control" placeholder="About Course"></textarea>
                        </div>

                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.HowToApply">How To Apply</label>
                            <textarea asp-for="@Model.Course.HowToApply" class="form-control" placeholder="How To Apply"></textarea>
                        </div>

                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.Certification">Certification</label>
                            <textarea asp-for="@Model.Course.Certification" class="form-control" placeholder="Certification"></textarea>
                        </div>

                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Categories">Category </label>
                            <select name="SelectedCategoryId" id="Category">
                                @foreach (var item in ViewBag.Categories)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }

                            </select>
                        </div>

                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.Starts"> Start date</label>
                            <input type="date"  asp-for="@Model.Course.Starts"  class="form-control" placeholder="Starts">
                        </div>
                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.Duration">Course Duration</label>
                            <input asp-for="@Model.Course.Duration" class="form-control" placeholder="Duration">
                        </div>
                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.ClassDuration">Class Duration</label>
                            <input asp-for="@Model.Course.ClassDuration" class="form-control" placeholder="Class Duration">
                        </div>
                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.SkillLevel">Skill Level</label>
                            <input asp-for="@Model.Course.SkillLevel" class="form-control" placeholder="Skill Level">
                        </div>
                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.Language">Language</label>
                            <input asp-for="@Model.Course.Language" class="form-control" placeholder="Language">
                        </div>

                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.Students">Count of Students</label>
                            <input asp-for="@Model.Course.Students" class="form-control" placeholder="Students">
                        </div>

                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.Assesments">Assesments</label>
                            <input asp-for="@Model.Course.Assesments" class="form-control" placeholder="Assesments">
                        </div>

                        <div style="margin-bottom: 50px">
                            <label asp-for="@Model.Course.CourseFee">Course Fee</label>
                            <input asp-for="@Model.Course.CourseFee" class="form-control" placeholder="CourseFee">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div style="margin-right: 20px">
        <a asp-action="Index" class="btn btn-warning">Go Back</a>
    </div>
    <form method="post">
        <button type="submit" class="btn btn-danger">Create</button>
    </form>
</div>

@section Scripts
{
    Validation scripts
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}