
@{
    List<Teacher> teachers = Model;
}

        <div class="row">
            @foreach (var item in teachers)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher">
                        <div class="single-teacher-img">
                            <a href="teacher-details.html"><img src="img/teacher/@item.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="teacher-details.html">@item.Name</a></h2>

                            <h4>@item.TeacherPositions?.FirstOrDefault()?.Position.Name</h4>

                            <ul>
                                    @foreach (var teacherSocialNetwork in item.SocialNetworks)
                                    {
                                        <li><a href="@teacherSocialNetwork.Link"><i class="zmdi zmdi-@teacherSocialNetwork.Icon"></i></a></li>
                                    }
                            </ul>

                        </div>
                    </div>
                </div>
            }
        </div>
