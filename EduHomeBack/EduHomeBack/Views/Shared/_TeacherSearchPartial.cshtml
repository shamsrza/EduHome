
@{
    List<TeacherList> teacherList = Model;
}

<div class="row" style="display: flex; flex-direction: row">
    @foreach (var item in teacherList)
    {
        <div class="col-md-3 col-sm-4 col-xs-12" style="margin: 50px">
            <div class="single-teacher">
                <div class="single-teacher-img">
                    <a asp-controller="Teacher" asp-action="Detail" asp-route-id="@item.Id"><img src="~/img/teacher/@item.Image" alt="teacher"></a>
                </div>
                <div class="single-teacher-content text-center">
                    <h2><a asp-controller="Teacher" asp-action="Detail" asp-route-id="@item.Id">@item.Fullname</a></h2>

                    <h4>@item.TeacherPositions?.FirstOrDefault()?.Position.Name</h4>


                    <ul>
                        @foreach (var sn in item.SocialNetworks)
                        {
                            <li><a href="@sn.Link">@Html.Raw(sn.Icon)</a></li>
                        }
                    </ul>

                </div>
            </div>
        </div>
    }
</div>
