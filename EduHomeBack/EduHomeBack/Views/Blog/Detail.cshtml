@model BlogViewModel
@{
    ViewData["Title"] = "Blog Detail";
}

@await Component.InvokeAsync("Banner", "BlogDetails")

<!-- Blog Start -->
<div class="blog-details-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="blog-details">
                    <div class="blog-details-img">
                        <img src="~/img/blog/@Model.BlogDetail.Image" alt="blog-details" style="width: 100%">
                    </div>
                    <div class="blog-details-content">
                        <h2>@Model.BlogDetail.Title </h2>
                        <h6>By @Model.BlogDetail.Author  /  @Model.BlogDetail.PublishDate.ToString("MMMM dd, yyyy")  /  <i class="fa fa-comments-o"></i> @Model.BlogDetail.Comment</h6>
                        @Html.Raw(Model.BlogDetail.Desciption)
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Name</p>
                                    <input type="text" name="name" id="name">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Message</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <a class="reply-btn" href="#" data-text="send"><span>send message</span></a>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
